<div class="container-fluid">
  <div class="row flex-nowrap">
    <%= render 'admin/shared/side_nav' %>

    <div class="col p-0">
      <%= render 'admin/shared/nav' %>

      <div class="container-fluid mt-4">
        <div class="d-flex justify-content-between">
          <h1>All Member Levels</h1>
          <%= link_to "Create New Member Level", new_member_level_path, class: "btn btn-success h-100" %>
        </div>
        <table class="table table-bordered mt-2">
          <thead>
          <tr>
            <td>Level</td>
            <td>Required Members</td>
            <td>Coins</td>
            <td>Actions</td>
          </tr>
          </thead>
          <tbody>
          <% @member_levels.each do |member_level| %>
            <tr>
              <td class="text-nowrap"><%= member_level.level %></td>
              <td class="text-nowrap"><%= member_level.required_members %></td>
              <td class="text-nowrap"><%= member_level.coins %></td>
              <td class="text-nowrap p-2">
                <div class="d-flex justify-content-start">
                  <%= link_to "Edit", edit_member_level_path(member_level), class: "btn btn-sm btn-warning me-2" %>
                  <%= button_to "Delete", member_level_path(member_level), method: :delete, class: "btn btn-sm btn-danger" %>
                </div>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <%= paginate @member_levels %>
      </div>

    </div>
  </div>
</div>