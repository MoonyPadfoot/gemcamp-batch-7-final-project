<div class="container d-flex justify-content-center pt-3">
  <div class="w-25">
    <h2 class="text-center py-3">Admin Login</h2>
    <div class="card shadow p-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-floating field mb-3">
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "Email" %>
          <%= f.label :email, class: "form-label" %>
        </div>

        <div class="form-floating field mb-3">
          <%= f.password_field :password, class: "form-control", autocomplete: "current-password", placeholder: "Password" %>
          <%= f.label :password, class: "form-label" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions text-center my-2">
          <%= f.submit "Log in", class: 'btn btn-lg btn-success w-100' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
