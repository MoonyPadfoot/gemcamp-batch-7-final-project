<div class="container-fluid">
  <div class="row flex-nowrap">
    <%= render 'admin/shared/side_nav' %>

    <div class="col p-0">
      <%= render 'admin/shared/nav' %>

      <div class="container-fluid p-3">
        <h1>Balance Operate</h1>
        <div class="d-flex align-items-center gap-2">
          <div class="w-50 ">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
              <li class="nav-item" role="presentation">
                <%= link_to "Increase", new_users_client_orders_increase_path(params[:client_id]), class: "nav-link #{'active' if request.path.include?('/increase')}" %>
              </li>
              <li class="nav-item" role="presentation">
                <%= link_to "Deduct", new_users_client_orders_deduct_path(params[:client_id]), class: "nav-link #{'active' if request.path.include?('/deduct')}" %>
              <li class="nav-item" role="presentation">
                <%= link_to "Bonus", new_users_client_orders_bonu_path(params[:client_id]), class: "nav-link #{'active' if request.path.include?('/bonus')}" %>
              </li>
            </ul>
            <div class="tab-content" id="myTabContent">
              <div class="tab-pane fade <%= 'show active' if request.path.include?('/increase') %>" id="increase-tab-pane" role="tabpanel" aria-labelledby="increase-tab" tabindex="0">
                <%= render partial: 'admin/users/orders/form', locals: { path: users_client_orders_increase_index_path } %>
              </div>
              <div class="tab-pane fade <%= 'show active' if request.path.include?('/deduct') %>" id="deduct-tab-pane" role="tabpanel" aria-labelledby="deduct-tab" tabindex="0">
                <%= render partial: 'admin/users/orders/form', locals: { path: users_client_orders_deduct_index_path } %>
              </div>
              <div class="tab-pane fade <%= 'show active' if request.path.include?('/bonus') %>" id="bonus-tab-pane" role="tabpanel" aria-labelledby="bonus-tab" tabindex="0">
                <%= render partial: 'admin/users/orders/form', locals: { path: users_client_orders_bonus_path } %>
              </div>
            </div>
          </div>
          <div class="w-50">
            <div class="card shadow p-4">
              <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">Username</span>
                <input type="text" value="<%= @user&.username %>" readonly class="form-control" aria-label="Username" aria-describedby="basic-addon1">
              </div>
              <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon2">Promoter Name</span>
                <input type="text" value="<%= @user&.parent&.username %>" readonly class="form-control" aria-label="Promoter" aria-describedby="basic-addon2">
              </div>
              <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon3">Coins</span>
                <input type="text" value="<%= @user&.coins %>" readonly class="form-control" aria-label="Coins" aria-describedby="basic-addon3">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>