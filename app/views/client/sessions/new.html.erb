<div class="d-flex justify-content-center pt-3">
  <div class="w-100">
    <div class="d-flex justify-content-evenly mb-3">
      <a class="btn btn-outline-primary pe-none w-50 rounded-0">Login</a>
      <%= link_to "Register", new_client_registration_path, class: "btn btn-primary rounded-0 w-50 text-center text-decoration-none" %>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-floating field mb-3">
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "Email" %>
        <%= f.label :email, class: "form-label" %>
      </div>

      <div class="form-floating field mb-3">
        <%= f.password_field :password, class: "form-control", autocomplete: "current-password", placeholder: "Password" %>
        <%= f.label :password, class: "form-label" %>
      </div>

      <div class="actions text-center my-2">
        <%= f.submit "Login", class: 'btn btn-lg btn-success w-100' %>
      </div>
    <% end %>
  </div>
</div>