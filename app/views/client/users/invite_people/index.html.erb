<div class="text-center pt-5">
  <div class="mb-4">
    <%= @svg.html_safe %>
  </div>

  <p><a href="<%= @invite_url %>"><%= @invite_url %></a></p>

  <div class="card shadow p-4 mb-2">
    <h3 class="mb-4">Invited Members</h3>

    <ul class="list-group list-group-horizontal">
      <% @invite_members.each do |invite_member| %>
        <li class="list-group-item"><%= invite_member.email %></li>
      <% end %>
    </ul>
  </div>

  <%= paginate @invite_members %>

  <div class="card shadow p-4">
    <% if @level %>
      <p class="mb-0">You are currently level <span class="fw-bold"><%= @current_level.level %>!</span> Share
        to <span class="fw-bold"><%= pluralize(@level&.required_members, 'friend') %></span> and
        get <span class="fw-bold"><%= pluralize(@level&.coins, 'coin') %></span></p>
    <% else %>
      <p class="mb-0">You've reached maximum level!</p>
    <% end %>
  </div>
</div>