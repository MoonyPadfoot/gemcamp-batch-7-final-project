<%= render 'client/shared/nav' %>
<div class="container d-flex justify-content-center pt-3">
  <div class="w-100">
    <div class="card shadow p-4">
      <p>Username: <span class="fw-bold"><%= current_client&.username %></span></p>
      <p>Email: <span class="fw-bold"><%= current_client&.email %></span></p>
      <p>Coins: <span class="fw-bold"><%= current_client&.coins %></span></p>
      <button class="btn btn-primary w-100 mt-2">Cash In Now</button>
      <div class="d-flex justify-content-evenly mt-2">
        <%= link_to 'Edit Profile', edit_client_registration_path, class: "btn btn-primary w-50 me-1" %>
        <%= link_to 'Address', address_index_path, class: "btn btn-primary w-50 ms-1" %>
      </div>
    </div>
  </div>
</div>
<%= render 'client/shared/footer' %>