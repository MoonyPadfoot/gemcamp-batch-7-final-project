<div class="card shadow px-4 pt-5 pb-4">
  <div class="d-flex align-items-start gap-3 mb-4">
    <%= image_tag(current_client.image_url, class: "rounded-circle img-fluid profile-img") if current_client.image.present? %>
    <div class="d-flex flex-column gap-2">
      <div>Username: <span class="fw-bold"><%= current_client&.username %></span></div>
      <div>Email: <span class="fw-bold"><%= current_client&.email %></span></div>
      <div>Coins: <span class="fw-bold"><%= current_client&.coins %></span></div>
    </div>
  </div>
  <%= link_to 'Cash In Now', shops_path, class: "btn btn-primary w-100 mt-2" %>
  <div class="d-flex justify-content-evenly mt-2">
    <%= link_to 'Edit Profile', edit_client_registration_path, class: "btn btn-primary w-50 me-1" %>
    <%= link_to 'Address', address_index_path, class: "btn btn-primary w-50 ms-1" %>
  </div>
</div>