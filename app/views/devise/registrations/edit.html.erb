<%= render 'client/shared/nav' %>
<div class="container d-flex justify-content-center pt-3">
  <div class="w-100">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
    <div class="card shadow p-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

        <div class="field">
          <%= f.label :username, class: "form-label" %>
          <%= f.text_field :username, class: "form-control", autofocus: true, autocomplete: "username" %>
          <% resource.errors.full_messages_for(:username).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>

        <div class="field my-2">
          <%= f.label "Profile Image", class: "form-label" %>
          <%= f.file_field :image, class: "form-control" %>
          <% resource.errors.full_messages_for(:image).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>

        <div class="field my-2">
          <%= f.label :phone_number, class: "form-label" %>
          <%= f.text_field :phone_number, class: "form-control", autocomplete: "phone number" %>
          <% resource.errors.full_messages_for(:phone_number).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>

        <div class="field my-2">
          <%= f.label :password, class: "form-label" %> <span>(leave blank if you don't want to change it)</span><br/>
          <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
          <% resource.errors.full_messages_for(:password).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>

        <div class="field my-2">
          <%= f.label :password_confirmation, class: "form-label" %>
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
          <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>

        <div class="field my-2">
          <%= f.label :current_password, class: "form-label" %>
          <span>(we need your current password to confirm your changes)</span>
          <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
          <% resource.errors.full_messages_for(:current_password).each do |message| %>
            <div class="text-danger"><%= message %></div>
          <% end %>
        </div>

        <div class="actions">
          <%= f.submit "Update", class: "btn btn-success w-100" %>
        </div>
      <% end %>

      <h3 class="mt-2">Cancel my account</h3>

      <div><%= button_to "Cancel my account", registration_path(resource_name), class: "btn btn-danger",
                         data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

    </div>
  </div>
</div>
<%= render 'client/shared/footer' %>